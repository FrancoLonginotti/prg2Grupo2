<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/bannerNos1.jpg" />
	
	<title>Todo Terreno</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
	<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Roboto&display=swap" rel="stylesheet">

</head>
<body>
	<!-- Header -->
	<% if(locals.user != undefined){ %>
		<%- include('./partials/headerLogueado') %>
	<% } %>
	<% if(locals.user == undefined){ %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->
 
 
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
					<img src="<%= usuario.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
 
				</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title">
		   
							<%= usuario.nombre %>
				   
						<a href="profile-edit.html">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
				   
			   
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				   
				</div>
				<div>
					<ul class="">  
						<p><%= usuario.email %></p>
						<li><%= usuario.productos.length %> productos</li>
						<li>200 seguidores</li>
						<li><%= usuario.comentarios.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->
 
 
	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < usuario.productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detalle/<%= usuario.productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= usuario.productos[i].foto %>" alt="<%= usuario.productos[i].nombre %>">
							</figure>
						</a>
							<article class="product-box_data">
								<a href="/products/detalle/<%= usuario.productos[i].id %>">
									<h2><%= usuario.productos[i].nombre %></h2>
								</a>
							   
								<p><%= usuario.productos[i].descripcion %></p>
								<p>Comentarios: <%= usuario.productos[i].comentarios.length %></p>
								<p>Vendedor: <strong><%= usuario.nombre %></strong></p>
							</article>
					   
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Mis productos -->
 


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>	
</html>