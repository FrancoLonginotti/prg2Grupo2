<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="/images/logo-mercado-liebre.jpg" />

	<title>Todo Terreno</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="/css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/css/app.css">
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Xanh+Mono:ital@0;1&display=swap" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css2?family=Xanh+Mono:ital@0;1&display=swap" rel="stylesheet">

</head>

<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2>
				<section class="register">  
					<form action="/profile" method="get" class="formRegister">

						<label for="email">Correo Electrónico</label>
						<input id="email" name="email" type="email" placeholder="Ingrese su email">
						
						<label>Usuario</label>
						<input id="usuario" name="usuario" type="text" placeholder="Cree un usuario">

						<label for="password">Contraseña</label>
						<input id="password" name="password" type="password" placeholder="Cree una contraseña">
						
						<label>Fecha de nacimiento</label>
						<input id="fechaNacimiento" name="fechaNacimiento" type="date" placeholder="dd/mm/aaaa">

						<label>Foto de perfil</label>
						<input id="fotoPerfil" name="fotoPerfil" type="text" placeholder="Ingrese su foto de perfil">
						<div class="password"></div>
				
						<button type="submit">Registrarse</button>
						<p class="abajoDelBoton"><a href="/login">¿Ya tienes una cuenta? Inicia sesión aquí</a></p>
					</form>
				</section>
			</h2>


	<!-- footer -->
	<%- include("./partials/footer") %>
	<!-- /footer -->
</body>

</html>